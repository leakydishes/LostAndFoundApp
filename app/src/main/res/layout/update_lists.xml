<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--logo-->
    <LinearLayout
        android:id="@+id/input_group"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:background="@color/navy_blue"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:background="@color/material_on_surface_stroke"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:contentDescription="Remove item from list"
            android:src="@drawable/baseline_dry_cleaning_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/be_vietnam_medium"
            android:padding="10dp"
            android:text="Lost &amp; Found"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>
    <!-- 1-->
    <LinearLayout
        android:id="@+id/input_group2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/input_group">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!--Sender username-->
            <TextView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/edit_text_middle2"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="Lost/Found"
                android:textAlignment="center"
                android:textColor="@color/cadet_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/edit_text_middle2"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="Name of object"
                android:textAlignment="center"
                android:textColor="@color/cadet_blue" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/edit_text_middle2"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="0451174885"
                android:textAlignment="center"
                android:textColor="@color/cadet_blue" />
        </LinearLayout>

        <!--3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/edit_text_middle2"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="20/03/23"
                android:textAlignment="center"
                android:textColor="@color/cadet_blue" />

            <!--Sender username-->
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/edit_text_middle2"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="Melbourne"
                android:textAlignment="center"
                android:textColor="@color/cadet_blue" />
        </LinearLayout>

        <!--3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <!--Sender username-->
            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/edit_text_middle2"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@color/cadet_blue" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button"
            android:text="Remove" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>